<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BatteryRecorder">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name=".ipc.BinderProvider"
            android:authorities="yangfentuozi.batteryrecorder.binderProvider"
            android:exported="true"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL"/>
        <provider
            android:name=".ipc.ConfigProvider"
            android:authorities="yangfentuozi.batteryrecorder.configProvider"
            android:exported="true"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL"/>
    </application>

</manifest>
